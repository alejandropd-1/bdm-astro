---
export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description || "BDM Consultores - Desarrollamos el talento que impulsa el éxito"} />
    <meta
      name="keywords"
      content="BDM Consultores, Recruiter, RRHH, Capital Humano, Consultoría, Compensaciones, Administración de Personal"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description || "Desarrollamos el talento que impulsa el éxito"} />
    <meta property="og:image" content="https://bdmconsultores.com.ar/images/bdm-logo-social.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description || "Desarrollamos el talento que impulsa el éxito"} />
    <meta name="twitter:image" content="https://bdmconsultores.com.ar/images/bdm-logo-social.png" />
    <meta name="twitter:site" content="@bdmconsultores" />
    <meta name="twitter:creator" content="@bdmconsultores" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "BDM Consultores",
        "description": "Desarrollamos el talento que impulsa el éxito",
        "url": "https://bdmconsultores.com.ar",
        "logo": "https://bdmconsultores.com.ar/images/bdm-logo.svg",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+54-11-5114-7718",
          "contactType": "customer service",
          "availableLanguage": "Spanish"
        },
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "AR"
        },
        "sameAs": [
          "https://www.linkedin.com/in/bdmconsultores",
          "https://instagram.com/bdm.consultores"
        ]
      }
    </script>

    <!-- CSS crítico inline para FCP -->
    <style>
      /* Critical CSS - Above the fold */
      body{margin:0;font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif}
      .top-wrap{position:relative;overflow:hidden}
      .hero-container{min-height:100vh;display:flex;align-items:center}
      .uk-cover-container{overflow:hidden;position:relative}
      .uk-cover{width:100%;height:100%;object-fit:cover;position:absolute;top:0;left:0}
      .nav{position:sticky;top:0;z-index:980;background:rgba(255,255,255,0.95);backdrop-filter:blur(10px)}
      .uk-navbar{display:flex;align-items:center;padding:0 15px;min-height:80px}
    </style>
    
    <!-- UIkit CSS - carga asíncrona -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/uikit@3.21.13/dist/css/uikit.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.21.13/dist/css/uikit.min.css"></noscript>

    <!-- Resource hints para optimizar carga -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    <link rel="preload" href="/images/hero-banner-2.png" as="image" type="image/png" fetchpriority="high">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/uikit@3.21.13/dist/js/uikit.min.js" as="script" crossorigin>

    <!-- Main SCSS -->
    <style lang="scss" is:global>
      @use "../styles/main.scss";
    </style>
  </head>
  
  <body>
    <slot />
    
    <!-- Web Vitals optimizations -->
    <script type="module">
      import '../components/WebVitals.astro';
    </script>
    
    <!-- UIkit JS -->
    <script is:inline src="https://cdn.jsdelivr.net/npm/uikit@3.21.13/dist/js/uikit.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/uikit@3.21.13/dist/js/uikit-icons.min.js"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DQWHJLZLBF"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-DQWHJLZLBF");
    </script>
  </body>
</html>