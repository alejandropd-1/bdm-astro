---
// Client logos carousel component
const logos = [
  { src: '/images/logo-1.png', alt: 'Cliente 1' },
  { src: '/images/logo-3.png', alt: 'Cliente 3' },
  { src: '/images/logo-4.png', alt: 'Cliente 4' },
  { src: '/images/logo-5.png', alt: 'Cliente 5' },
  { src: '/images/logo-2.png', alt: 'Cliente 2', narrow: true },
  { src: '/images/logo-6.png', alt: 'Cliente 6' },
  { src: '/images/logo-7.png', alt: 'Cliente 7', narrow: true },
  { src: '/images/logo-8.png', alt: 'Cliente 8', narrow: true },
  { src: '/images/logo-9.png', alt: 'Cliente 9', narrow: true },
];
---

<section
  class="uk-section uk-section-medium uk-section-muted"
  uk-slider="autoplay: true; autoplay-interval: 3000"
>
  <div class="uk-container uk-slider-container uk-text-center">
    <h2 class="uk-margin-small-bottom heading-3">Clientes</h2>
    <div
      class="uk-grid uk-child-width-1-2 uk-child-width-1-6@m logos-grid uk-flex-middle uk-slider-items uk-height-small"
      data-uk-grid
      data-uk-scrollspy="cls: uk-animation-scale-down; target: > div > img; delay: 100"
    >
      {logos.map((logo) => (
        <div class={logo.narrow ? 'logo-narrow' : ''}>
          <img
            src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
            data-src={logo.src}
            data-uk-img
            alt={logo.alt}
          />
        </div>
      ))}
    </div>
  </div>
</section>