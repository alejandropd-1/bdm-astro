---
// Footer component
const currentYear = new Date().getFullYear();

const contactLinks = [
  {
    href: "https://wa.me/541151147718?text=Hola,%20quisiera%20contactarme%20con%20ustedes%20!",
    icon: "whatsapp",
    text: "Contáctanos por Whatsapp",
  },
  {
    href: "mailto:info@bdmconsultores.com.ar",
    icon: "mail",
    text: "info@bdmconsultores.com.ar",
  },
  // {
  //   href: "https://instagram.com/bdm.consultores",
  //   icon: "instagram",
  //   text: "@bdm.consultores",
  // },
  {
    href: "https://www.linkedin.com/in/bdmconsultores",
    icon: "linkedin",
    text: "bdmconsultores",
  },
];

const menuItems = [
  { href: "/services/nosotros/", text: "Nosotros" },
  { href: "/services/capital-humano/", text: "Capital Humano" },
  { href: "/services/consultoria/", text: "Consultoría" },
  { href: "/services/compensaciones/", text: "Compensaciones" },
  { href: "/services/administracion-personal/", text: "Adm. de Personal" },
];
---

<footer id="contact" class="uk-section footer uk-padding-remove-bottom">
  <div class="uk-container">
    <div class="uk-grid uk-grid-large" data-uk-grid>
      <div class="uk-width-1-2@m">
        <a class="uk-logo" title="Logo" href="/">
          <img src="/images/bdm-logo-dark.svg" alt="BDM Consultores Logo" />
        </a>
        <p class="uk-text-large uk-text-italic">
          "Quienes invierten en su gente invierten en su futuro"
        </p>
        <p>
          Colaboramos ofreciendo soluciones estratégicas orientados a alcanzar
          el éxito organizacional, ayudando a gestionar y desarrollar el
          talento.
        </p>
      </div>

      <div class="uk-width-1-6@m">
        <h3>MENU</h3>
        <nav>
          <ul class="uk-list">
            {
              menuItems.map((item) => (
                <li>
                  <a href={item.href}>{item.text}</a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <div class="uk-width-1-3@m">
        <h3>CONTACTO</h3>
        <ul class="uk-list">
          {
            contactLinks.map((contact) => (
              <li>
                <a
                  class="uk-link-reset"
                  href={contact.href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <span class="uk-icon-button" data-uk-icon={contact.icon} />
                  {contact.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>

  <div class="uk-text-center uk-padding uk-padding-remove-horizontal">
    <span class="uk-text-small uk-text-muted">
      © {currentYear} BDM Consultores - Todos los derechos reservados -
      <a href="https://aledesign.dev" target="_blank" rel="noopener noreferrer"
        >Created by aledesign.dev</a
      >
      | Built with
      <a
        href="http://getuikit.com"
        title="Visit UIkit 3 site"
        target="_blank"
        rel="noopener noreferrer"
        data-uk-tooltip
      >
        <span data-uk-icon="uikit"></span>
      </a>
    </span>
  </div>
</footer>
