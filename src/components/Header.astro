---
import Navigation from './Navigation.astro';

interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;
---

<div
  class="nav"
  data-uk-sticky="cls-active: uk-background-complementary uk-box-shadow-medium; top: 100vh; animation: uk-animation-slide-top"
>
  <div class="uk-container">
    <nav
      class="uk-navbar uk-navbar-container uk-navbar-transparent"
      data-uk-navbar
    >
      <div class="uk-navbar-left">
        <div class="uk-navbar-item uk-padding-remove-horizontal">
          <a class="uk-logo" title="Logo" href="/"
            ><img src="/images/bdm-logo.svg" alt="BDM Consultores Logo"
          /></a>
        </div>
      </div>
      <div class="uk-navbar-center">
        <Navigation currentPage={currentPage} />
      </div>
      <div class="uk-navbar-right">
        <ul class="uk-navbar-nav uk-visible@s">
          <li>
            <a
              href="#contact"
              data-uk-scroll="duration: 500"
              data-uk-icon="chevron-down">Contacto</a>
            <div class="uk-navbar-dropdown uk-width-auto">
              <ul class="uk-nav uk-navbar-dropdown-nav">
                <li>
                  <a
                    href="https://wa.me/541151147718?text=Hola,%20quisiera%20contactarme%20con%20ustedes%20!"
                    target="_blank"
                    rel="noopener noreferrer"
                    ><span
                      class="uk-margin-small-right"
                      uk-icon="icon: whatsapp"
                    ></span>
                    Cont√°ctanos por Whatsapp</a>
                </li>
                <li>
                  <a href="mailto:info@bdmconsultores.com.ar" target="_blank" rel="noopener noreferrer"><span class="uk-margin-small-right"
                      uk-icon="icon: mail"></span>
                    info@bdmconsultores.com.ar</a>
                </li>
                <li>
                  <a href="https://instagram.com/bdm.consultores" target="_blank" rel="noopener noreferrer"><span
                      class="uk-margin-small-right" uk-icon="icon: instagram"></span>
                    @bdm.consultores</a>
                </li>
                <li>
                  <a href="https://www.linkedin.com/in/bdmconsultores" target="_blank" rel="noopener noreferrer"><span
                      class="uk-margin-small-right" uk-icon="icon: linkedin"></span>
                    bdmconsultores</a>
                </li>
              </ul>
            </div>
          </li>
        </ul>
        <a
          class="uk-navbar-toggle uk-navbar-item uk-hidden@s"
          data-uk-toggle
          data-uk-navbar-toggle-icon
          href="#offcanvas-nav"
        ></a>
      </div>
    </nav>
  </div>
</div>